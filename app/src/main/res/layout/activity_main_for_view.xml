<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_for_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alisa.myfirstapplication.MainActivityForView">


    <com.example.alisa.myfirstapplication.MyCustomView
       android:layout_width="166dp"
        android:layout_height="100dp"
        android:id="@+id/myCustomView"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/mySecondCustomView"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@+id/myCustomView1"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintVertical_bias="0.0" />
    <com.example.alisa.myfirstapplication.MySecondCustomView
        android:layout_width="161dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/mySecondCustomView"
        android:layout_marginEnd="24dp"
        app:layout_constraintRight_toRightOf="parent" />


    <com.example.alisa.myfirstapplication.MyCustomView
        android:layout_width="133dp"
        android:layout_height="59dp"

        android:id="@+id/myCustomView1"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/mySecondCustomView1"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@+id/myCustomView2"
        android:layout_marginBottom="88dp" />
    <com.example.alisa.myfirstapplication.MySecondCustomView
        android:layout_width="125dp"
        android:layout_height="59dp"

        android:id="@+id/mySecondCustomView1"
        android:layout_marginEnd="48dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/mySecondCustomView"
        app:layout_constraintBottom_toTopOf="@+id/mySecondCustomView2"
        android:layout_marginBottom="8dp" />

    <com.example.alisa.myfirstapplication.MyCustomView
        android:layout_width="85dp"
        android:layout_height="34dp"

        android:id="@+id/myCustomView2"
        app:layout_constraintRight_toLeftOf="@+id/mySecondCustomView2"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="56dp" />

    <com.example.alisa.myfirstapplication.MySecondCustomView
        android:layout_width="73dp"
        android:layout_height="34dp"

        android:id="@+id/mySecondCustomView2"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/mySecondCustomView1"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="56dp" />
</android.support.constraint.ConstraintLayout>
